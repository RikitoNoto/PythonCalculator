#:kivy 2.0.0

<InputButton@Button>:
    send_data: ""
    font_size: 80

<NumberButton@InputButton>:
    on_press: app.number_button_on_press(send_data=self.send_data)

<DecimalButton@InputButton>:
    on_press: app.decimal_button_on_press(send_data=self.send_data)

<OperatorButton@InputButton>:
    on_press: app.operator_button_on_press(send_data=self.send_data)

<EqualButton@InputButton>:
    on_press: app.equal_button_on_press(send_data=self.send_data)

<ACButton@InputButton>:
    on_press: app.ac_button_on_press(send_data=self.send_data)

<InputPanel>:
    rows: 5
    cols: 4

    ACButton:
        send_data: root.AC
        text: "AC"
    Widget:
    Widget:
    OperatorButton:
        send_data: root.DIVI
        text: "รท"
    NumberButton:
        send_data: root.SEVEN
        text: "7"
    NumberButton:
        send_data: root.EIGHT
        text: "8"
    NumberButton:
        send_data: root.NINE
        text: "9"
    OperatorButton:
        send_data: root.MULTI
        text: "ร"
    NumberButton:
        send_data: root.FOUR
        text: "4"
    NumberButton:
        send_data: root.FIVE
        text: "5"
    NumberButton:
        send_data: root.SIX
        text: "6"
    OperatorButton:
        send_data: root.MINUS
        text: "-"
    NumberButton:
        send_data: root.ONE
        text: "1"
    NumberButton:
        send_data: root.TWO
        text: "2"
    NumberButton:
        send_data: root.THREE
        text: "3"
    OperatorButton:
        send_data: root.PLUS
        text: "+"
    Widget:
    NumberButton:
        send_data: root.ZERO
        text: "0"
    DecimalButton:
        send_data: root.DECIMAL
        text: "."
    EqualButton:
        send_data: root.EQUAL
        text: "="